<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tech_bg_gradient"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.08"
        android:text="GS REMOTE CONTROL"
        android:textColor="#A8CEFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/headerSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Outdoor GPS Link"
        android:textColor="#6F8EBD"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/headerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/modeRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/headerSub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="位移模式：IMU / GPS"
            android:textColor="#D7E7FF"
            android:textSize="13sp" />

        <RadioGroup
            android:id="@+id/modeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@id/modeImu">

            <RadioButton
                android:id="@+id/modeImu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMU"
                android:textColor="#D7E7FF"
                android:buttonTint="#D7E7FF"
                android:paddingEnd="10dp" />

            <RadioButton
                android:id="@+id/modeGps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS"
                android:textColor="#D7E7FF"
                android:buttonTint="#D7E7FF" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/tech_card_bg"
        android:orientation="vertical"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/modeRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IP: 0.0.0.0"
                android:textColor="#E4EEFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#294066"
                android:padding="8dp"
                android:text="status"
                android:textColor="#D5E7FF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/clients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="连接数: 0"
                android:textColor="#B8D4FF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/displacement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="位移(m): x=0.000 y=0.000 z=0.000"
                android:textColor="#AFC7EA"
                android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/infoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/startBtn"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/tech_btn_primary"
            android:text="Start"
            android:textAllCaps="false"
            android:textColor="#ECF5FF"
            android:textStyle="bold" />

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/stopBtn"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/tech_btn_secondary"
            android:text="Stop"
            android:textAllCaps="false"
            android:textColor="#DDEAFF"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tech_btn_secondary"
        android:text="Reset Displacement"
        android:textAllCaps="false"
        android:textColor="#DDEAFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/actionRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>